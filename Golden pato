#include <iostream>
#include <stdio.h>
using namespace std;
bool pato(int s)
{
    int x,y=1;
    if(s%2!=0)
    {
        for(x=3;x<s/2+1;x+=2)
        {
            if(s%x==0)
            {
                y=0;
                x=s;
            }
        }
    }
    else
        {
            if(s==2){return 1;}
            else return 0;
        }
        if(y==1)
        {
            return 1;
        }
        else
        {
            return 0;
        }
}
int main()
{
    int n ;
    while(cin>>n && n>=6 &&n<1000000)
    {
        int s,k;
        s=1;
        bool b2=0;
        while(s<n && b2==0)
        {
            s++;
            if(pato(s))
            {
                k=n-s;
                if(pato(k)&& k!=1)
                {
                    b2=1;
                    printf("%d = %d + %d\n",n,s,k);
                }
            }
        }
    }
return 0;
}
